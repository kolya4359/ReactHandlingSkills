{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "prettier"],
  // prettier 에서 관리하는 코드 스타일은 ESLint에서 관리하지 않도록 설정.
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-unused-vars": "warn",
    // 사용하지 않는 변수 에러는 경고처리
    "no-console": "off"
    // ESLint 기본 설정에서는 console.log 사용을 지양하고 있다.
    // 그러나 이번 프로젝트에선 console.log를 사용할 것이므로 비활성화한다.
  }
}
